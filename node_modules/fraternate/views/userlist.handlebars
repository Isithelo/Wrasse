  <div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <h1 class="display-2">User List</h1>
      <div style="text-align: right">{{>issuebutton parentid='userlist'}}</div>
      <p>The following users currently use {{siteName}}.</p>
      <div class="row mt-5">
        {{#each username}}
        <div class="col-md-4">
         <div class="row mb-5">
           <div class="col-md-4">
             {{#if this.image}}
             <img onerror="this.src='https://www.gravatar.com/avatar/{{this._id}}?s=96&d=retro&r=G'"" src="{{this.image}}" class="align-self-end mr-3" style="width: 100%;border-radius: 3px" >
             {{else}}
             <img src="https://www.gravatar.com/avatar/{{this._id}}?s=96&d=retro&r=G" class="card-img-top"   style="width: 100%;border-radius: 3px">
             {{/if}}  
           </div>
           <div class="col-md-8">
            <h5 class="mt-0 mb-1" >
              <a href="/users/{{this.username}}">{{this.username}}</a>
            </h5>
            {{#if this.company}}
            <p class="card-text"><small class="text-muted"><i class="fa fa-users" aria-hidden="true"></i> {{dotdotdot this.company}}</small></p>
            {{/if}}
            {{#if this.location}}
            <p class="card-text"><small class="text-muted"><i class="fa fa-map-marker" aria-hidden="true"></i> {{this.location}}</small></p>    
            {{else}}
            <p class="card-text"><small class="text-muted"><i class="fa fa-plus" aria-hidden="true"></i> {{this.createdAt}}</small></p>    
            {{/if}}
            <a class="btn btn-outline-secondary btn-sm" href="/users/{{this.username}}">View Profile</a>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div> 
</div>
</div>