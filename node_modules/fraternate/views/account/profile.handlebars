<script defer type="text/javascript" src="//d3js.org/d3.v3.min.js"></script>
<script defer type="text/javascript" src="//cdn.jsdelivr.net/cal-heatmap/3.3.10/cal-heatmap.min.js"></script>
<link rel="stylesheet" href="//cdn.jsdelivr.net/cal-heatmap/3.3.10/cal-heatmap.css" />
<style type="text/css">
  .card-columns {
    -webkit-column-count: 4;
    -moz-column-count: 4;
    column-count: 4;
  }
</style>
<div class="container">
  <div class="row" style="padding-top: 35px">
    <div class="col-3">
      {{#if userload.image}}
      <div onerror="this.src='{{userload.gravatar}}'"" id="googlepic" style="border-radius:15px!important;width: 100%;border-radius: 5px;border: 1px;border-color: #d8d8d8;border-style: solid; ></div>
      {{else}}
      {{>randompicmd}}
      {{/if}}
      <div style="text-align: right" class="mt-2">
        <a href="/users/{{user.username}}/settings/profile" class="btn btn-outline-secondary btn-sm col-12"><i class="fas fa-edit"></i> Edit your profile</a> 
      </div>
      <h1>{{userload.name}} {{userload.lastname}} <small> {{userload.username}}</small></h1>
      <p>{{profile userload.bio}}</p>
      {{#if userload.company}}
      <div class=" " >
        <i class="fa fa-users" aria-hidden="true"></i>  {{dotdotdot userload.company}}
      </div>
      {{/if}}
      {{#if userload.location}}
      <div >
        <i class="fa fa-map-marker" aria-hidden="true"></i>  {{userload.location}}
      </div>
      {{/if}}
      {{#if userload.publicemail}}
      <div >
        <i class="far fa-envelope"></i>  {{userload.publicemail}}
      </div>
      {{/if}}
      {{#if userload.website}}
      <div >
        <i class="fa fa-link" aria-hidden="true"></i>  <a href="{{userload.website}}" target="_blank">{{userload.website}}</a>
      </div>
      {{/if}}
      <hr>
      {{#if organizations}}
      <h4>Organizations</h4>
      <div class="card-columns"> 
       {{#each organizations}}
       <div class="card">
        <a href="/organizations/{{this.entry.name}}"   data-toggle="tooltip" data-placement="top" title="{{this.entry.name}}" >
          {{#if this.entry.image}}
          <img onError="this.onerror=null;this.src='https://www.gravatar.com/avatar/{{this._id}}?s=32&d=retro&r=G';"  onerror="this.src='{{this.gravatar}}'"" src="{{this.entry.image}}" class=" card-img-top"  alt="Responsive image" >
          {{else}}
          <img src="https://www.gravatar.com/avatar/{{this._id}}?s=32&d=retro&r=G"  class="card-img-top"  alt="Responsive image">
          {{/if}}       
        </a>
      </div>
      {{/each}} 
    </div> 
    <p></p>
    {{else}}
    <div class="col-8">
      <p>This user is not a member of any organizations.</p>
    </div>
    {{/if}}
  </div>
  <div class="col-8">
   <div class="">
     {{#if messages.success}}
     <div role="alert" class="alert alert-success">
      {{#each messages.success}}
      <div>{{msg}}</div>
      {{/each}}
    </div>
    {{/if}}
    {{#if messages.error}}
    <div role="alert" class="alert alert-danger">
      {{#each messages.error}}
      <div>{{msg}}</div>
      {{/each}}
    </div>
    {{/if}}
  </div>
  <div class="col-12">
    {{>custom}}
  </div>
</div>
</div>
<script type="text/javascript">
  var username = JSON.stringify('{{userload.username}}')
  var user = JSON.stringify('{{user.username}}')
  var text = '{{userload.image}}'
  text =text.replace("sz&#x3D;50", "sz&#x3D;200");
  $('#googlepic').html('<img src="'+text+'" style="width: 100%;border-radius:15px;" class="media-object">')
  $(function () {
    $('[data-toggle="tooltip"]').tooltip()
  })
</script>
</div>