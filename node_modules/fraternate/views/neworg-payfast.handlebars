    if(value.match(name)) {
      var res =   $("#displayname").val().replace(/ /gi, '-')
      res = res.toLowerCase();
      $("#insert").html(res)
      $("#name").val(res)
      $('#submits').prop('disabled', false);
      $("#nameGroup").removeClass('has-error')
      $('#errmsg').html('')
    } else {
      $("#nameGroup").addClass('has-error')
      $('#submits').prop('disabled', true);
