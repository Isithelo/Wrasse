
      <h1 class="display-2">Organization List</h1>
      <p>The following organizations currently use {{siteName}}.</p>
      <div class="row mt-4">
        {{#each username}}
        <div class="col-md-4">
         <div class="row mb-5">
           <div class="col-md-4">
            {{#if this.entry.image}}
            <a href="/organizations/{{this.entry.name}}">
              <img onerror="this.src='https://www.gravatar.com/avatar/{{this._id}}?s=96&d=retro&r=G" src="{{this.entry.image}}" class=""  style="width: 100%;border-radius: 3px"  >
            </a>
            {{else}}
            <a href="/organizations/{{this.entry.name}}">
              <img src="https://www.gravatar.com/avatar/{{this._id}}?s=96&d=retro&r=G" class=""   style="width: 100%;border-radius: 3px">
            </a>
            {{/if}}
          </div>
          <div class="col-md-8">
           {{#if this.entry.displayname}}
           <h5 class="card-title">{{this.entry.displayname}}</h5>
           {{else}}
           <h5 class="card-title">{{this.entry.name}}</h5>
           {{/if}}
           <p class="card-text">{{dots this.entry.description}}</p>
           {{#if this.entry.owner}}
           <small>Owned by : <a style="color:grey" href="/users/{{this.entry.owner}}">{{this.entry.owner}}</a></small>
           {{/if}}
           <h4><a href="/users/{{this.username}}">{{this.username}}</a>   </h4>
           {{#if this.company}}
           <div class="col-md-2" style="color:grey">
            <i class="fa fa-users" aria-hidden="true"></i>
          </div>
          <div class="col-md-10" style="color:grey">
            {{dots this.company}}
          </div>
          {{/if}}
          {{#if this.location}}
          <div class="col-md-2" style="color:grey">
            <i class="fa fa-map-marker" aria-hidden="true" style="color:grey"></i>
          </div>
          <div class="col-md-10">
            {{this.location}}
          </div>
          {{/if}}
          <a class="btn btn-outline-secondary btn-sm" href="/organizations/{{this.entry.name}}">View Profile</a>
        </div>
      </div>
    </div>
    {{/each}}
 </div>
















