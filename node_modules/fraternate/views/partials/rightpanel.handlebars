<style type="text/css">
    .card-columns {
        -webkit-column-count: 4;
        -moz-column-count: 4;
        column-count: 4;
 
} 
</style>
<div class="row">
<div class="card" style="width: 18rem;">
      <a href="/users/{{user.username}}">
      {{#if user.image}}
      <div onError="this.onerror=null;this.src='https://www.gravatar.com/avatar/{{uniqueid}}?s=93&d=retro&r=G';" class="card-img-top"  id="googlepic"  ></div>
      {{else}}
      <img src="https://www.gravatar.com/avatar/{{uniqueid}}?s=93&d=retro&r=G"   class="card-img-top">
      {{/if}}
    </a>
</div>
  <div class="col-12" style="text-align: right;">
{{#if user.name}}
    <a href="/users/{{user.username}}" style="color: black;text-decoration: none">
      <h1>{{user.name}} {{user.lastname}} </h1><small>{{user.username}}</small>
    </a>
{{else}}
    <a href="/users/{{user.username}}" style="color: black;text-decoration: none">
      <h1>{{user.username}}</h1>
    </a>
{{/if}}
  </div>
  {{#if user.company}}
  <div>
    <i class="fa fa-users" aria-hidden="true"></i>  {{dotdotdot user.company}}
  </div>
  {{/if}}
  {{#if user.publicemail}}
  <div>
    <i class="far fa-envelope"></i>  <a href="mailto:{{user.publicemail}}">{{user.publicemail}}</a>
  </div>
  {{/if}}
  {{#if user.website}}
  <div>
    <i class="fa fa-link" aria-hidden="true"></i>   <a href="http://{{user.website}}" target="_blank">{{user.website}}</a>
  </div>
  {{/if}}
  {{#if user.location}}
  <div>
    <i class="fa fa-map-marker" aria-hidden="true"></i>  {{user.location}}
  </div>
  {{/if}}
  <div>
    <p></p>
    {{#if user.bio}}
       <div class="dummy">
        <p>{{user.bio}}</p>
      </div>
      <br>
    <p></p>
    <div style="text-align: right">
      <a href="/users/{{user.username}}/settings/profile" class="btn btn-outline-secondary btn-sm col-12"><i class="fas fa-edit"></i> Edit your profile</a> 
    </div>
    {{else}}
    <strong>Edit your Bio</strong>, to add some details about yourself.<p></p><a href="/users/{{user.username}}/settings/profile" class="btn btn-outline-secondary btn-sm"><i class="fas fa-edit"></i> Edit your profile</a>
    {{/if}}
  </div>
  <div> <p></p></div>
 
    {{#if organizations}}
    <h4 class="mt-2">Organizations</h4>
<div class="card-columns">
 {{#each organizations}}
  <div class="card">
          <a href="/organizations/{{this.entry.name}}"  data-toggle="tooltip" data-placement="top" title="{{this.entry.name}}"   >
        {{#if this.entry.image}}
        <img onError="this.onerror=null;this.src='https://www.gravatar.com/avatar/{{this._id}}?s=32&d=retro&r=G';"  onerror="this.src='https://www.gravatar.com/avatar/{{this._id}}?s=32&d=retro&r=G'"" src="{{this.entry.image}}" class=" card-img-top"  alt="Responsive image">
        {{else}}
        <img src="https://www.gravatar.com/avatar/{{this._id}}?s=32&d=retro&r=G"  class="card-img-top"  alt="Responsive image">
        {{/if}}       
      </a>
  </div>
 {{/each}} 
  </div> 
        <p></p>
        <a class="btn btn-outline-secondary  btn-sm  col-12" href="/organizations/new-payfast"><i class="fa fa-plus" aria-hidden="true"></i> Create an Organization</a>  
        <p></p>
     
      {{else}}
      <h4 class="mt-2">Organizations</h4>
      <div style="border-width: 1px; border-style: dashed; border-color: grey;padding:15px;border-radius: 2px;">
        <strong>No organizations found.</strong> Organizations allow for fine grain project control of teams and the management of your database entries, components and assemblies.<p></p><a class="btn btn-outline-secondary  btn-sm " href="/organizations/new-payfast"><i class="fa fa-plus" aria-hidden="true"></i> Create an Organization</a>
      </div>
      {{/if}} 
  
  <div class=" " >
    <h4 class="mt-2">Plan</h4>
    <div id="standardplan">
      <div style="border-width: 1px; border-style: dashed; border-color: grey;padding:15px;border-radius: 2px;">
        <strong>Free plan</strong>, unlimited public repositories.<p></p><a class="btn btn-outline-secondary btn-sm col-12" href="/users/{{user.username}}/settings/billing/upgrade_payfast"><i class="fas fa-credit-card"></i> Get private repositories</a>
      </div>
      <p></p>
    </div>
    <div id="payfast_plan">
    </div>
    <p></p>
    <div id="braintree_plan">
    </div>
  </div>
</div>
<script type="text/javascript">
 
  
  var text = '{{user.image}}'
  text =text.replace("sz&#x3D;50", "sz&#x3D;200");
  $('#googlepic').html('<img src="'+text+'" style="width: 100%;border-radius:5px;" class="media-object">')
  var payfastplan = '{{user.plan.payfast.payment_status}}'
  var braintreeplan = '{{user.plan.name}}'
////////////////////////
///// INITIALIZE //////
//////////////////////
$(document).ready( function() {
 plan()
 $('.dummy').readmore();
});
///////////////////////
///// USER PLAN //////
/////////////////////
function plan(){
  if (braintreeplan) {
    $('#standardplan').html('')
    html=''
    html+=' <div class="well"><strong>Developer</strong>, Unlimited private repositories</div>'
    html+='<a class="btn btn-outline-secondary btn-sm" href="/users/{{user.username}}/settings/billing/" ><i class="fa fa-pencil" aria-hidden="true"></i> Edit Subscription</a>'
    $('#braintree_plan').html(html)
  }
  if (payfastplan == 'COMPLETE') {
    $('#standardplan').html('')
    html=''
    html+=' <div class="well"><strong>Developer</strong>, Unlimited private repositories</div>'
    html+='<a class="btn btn-outline-secondary btn-sm" href="/users/{{user.username}}/settings/billing-payfast/" ><i class="fa fa-pencil" aria-hidden="true"></i> Edit Subscription</a>'
    $('#payfast_plan').html(html)
  }
}
  $(function () {
  $('[data-toggle="tooltip"]').tooltip()
})
</script>
