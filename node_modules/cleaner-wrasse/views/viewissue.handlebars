{{#if parentid}}
<h1 class="display-1">View issues linked to <small><span class="badge badge-secondary">{{parentid}}</span></small></h1><br>
{{else}}    <br>
<h1 class="display-1">View all Issues</h1><br>
{{/if}} 
<div style="text-align: right">{{>issuebutton parentid='issuesview'}}</div>
<br><br>
<br>{{#if wrassemessage}}
<div class="alert alert-warning" role="alert">
  {{{wrassemessage}}}
</div>
{{/if}}
<button type="button" class="btn btn-outline-success" data-toggle="modal" data-target="#{{ids}}_issuelist">
  Flag an issue
</button>
 <br><br>
<ul class="nav nav-tabs" id="myTab" role="tablist">
  <li class="nav-item">
    <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Open Issues</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false">Closed Issues</a>
  </li>
</ul>
<br>
<div class="tab-content" id="myTabContent">
  <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
  	{{>wrasseissuelist ids=(uniqueid) status='open'}}
  </div>
  <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
  	{{>wrasseissuelist ids=(uniqueid) status='closed'}}
  </div>
</div>
 
 
 
<!-- Modal -->
<div class="modal fade bd-example-modal-lg" id="{{ids}}_issuelist" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Flag an issue</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
          {{>wrasseform ids=(uniqueid) }}
      </div>
    </div>
  </div>
</div>
