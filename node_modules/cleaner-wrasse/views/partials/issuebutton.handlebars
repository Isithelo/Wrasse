         
<!-- Example single danger button -->
<div class="btn-group">
  <button type="button" class="btn btn-sm btn-outline-success dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    <i class="fas fa-exclamation-circle"></i>
  </button>
  <div class="dropdown-menu dropdown-menu-right">
    <a class="dropdown-item disabled" href="#" tabindex="-1" aria-disabled="true">id : {{parentid}}</a>
    <div class="dropdown-divider"></div>
    <a target="_blank" class="dropdown-item" href="/issues/new/{{parentid}}"><i class="fas fa-exclamation-circle"></i> Flag an Issue new page</a>
    <a class="dropdown-item" href="/issues/new/{{parentid}}" data-toggle="modal" data-target="#{{parentid}}_modal"><i class="fas fa-exclamation-circle"></i> Flag an Issue via modal</a>
    <a class="dropdown-item" href="#">View Issues</a>
  </div>
</div>
 

 <!-- Modal -->
<div class="modal fade bd-example-modal-lg" id="{{parentid}}_modal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Flag an issue</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
          {{>wrasseform ids=(uniqueid) parentid='basicformviamodal'}}
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
 