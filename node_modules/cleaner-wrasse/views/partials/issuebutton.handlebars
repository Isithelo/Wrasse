         
<!-- Example single danger button -->
<div class="btn-group">
  <button type="button" class="btn btn-sm btn-outline-success dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
     <span id="button_{{parentid}}"><i class="fas fa-exclamation-circle"></i> New Issue</span>
  </button>
  <div class="dropdown-menu dropdown-menu-right">
    <!-- <a class="dropdown-item disabled" href="#" tabindex="-1" aria-disabled="true">id : {{parentid}}</a> -->
    <!--<div class="dropdown-divider"></div>-->
    <!--<a target="_blank" class="dropdown-item" href="/issues/new/{{parentid}}"><i class="fas text-success fa-exclamation-circle"></i> New Issue</a>-->
    <a class="dropdown-item" href="/issues/new/{{parentid}}" data-toggle="modal" data-target="#{{parentid}}_modal"><i class="fas text-success fa-exclamation-circle"></i> New Issue</a>
    <a class="dropdown-item" href="/issues/view/{{parentid}}"><i class="far fa-list-alt"></i> View Issues for this item</a>
  </div>
</div>
 
 <!-- Modal -->
<div class="modal fade bd-example-modal-lg" id="{{parentid}}_modal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Flag an issue</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" style="text-align: left;">
          {{>wrasseform ids=(uniqueid)}}
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $(document).ready(function () {
      idsIssue = '{{parentid}}'
      getIssueCount(idsIssue)
  })
  function getIssueCount(idsIssue){
    jQuery.ajax({
      'url': '/issues/getissuecount/'+idsIssue,
      'async': true,
      'global': false,
      'success': function (dataSchemaObject) {
          //console.log(dataSchemaObject)
          if (dataSchemaObject.openCount > 0) {
            if (dataSchemaObject.openCount > 1) {
            $('#button_'+idsIssue).html('<i class="fas fa-exclamation-circle"></i> '+dataSchemaObject.openCount+' Open Issues')  
            } else {
              $('#button_'+idsIssue).html('<i class="fas fa-exclamation-circle"></i> '+dataSchemaObject.openCount+' Open Issue')  
            }
          }
     }
   })
  }
</script>
 