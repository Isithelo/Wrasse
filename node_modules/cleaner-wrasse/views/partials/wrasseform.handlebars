{{#if user}}
<div class="row"  style="padding-bottom: 10px">
  <div class="col-2" style="text-align: right;"> 
    {{#if user}}
    {{>userpicsm}}
    {{else}}
    {{>randompicsm}}
    {{/if}}
    <br><br>
    <h5>{{user.username}}</h5>
  </div>
  
  <div class="col-md-10">
    <div class="card bubble">
      <div class="card-body">
        <small style="color: black"><span class="badge badge-primary"><i class="fas fa-exclamation-circle"></i> New</span> 
          {{#if parentid}}
          <span class="badge badge-success"><i class="fas fa-exclamation-circle"></i> {{parentid}}  </span> 
          {{/if}}
          Comment on now
        </p></small>
        <div>
         <form action="/issues/create"  onsubmit="event.preventDefault();formpost(this);" id="issue_{{ids}}" method="post" autocomplete="off" >
          <div class="form-group">
           <input  type="hidden" name="parentid"  value="{{parentid}}">
         </div>          
         <div class="form-group">
           <input type="hidden"  name="_id"  value="{{wrassequery._id}}">
         </div>
         <div class="form-group">
           <input type="hidden" id="redirect" value="{{originalUrl}}">
         </div>         
         <div class="form-group">
          <div class="input-icons">
            <div class="text-right">
            </div>
            <input type="text" class="form-control" id="title" name="title" placeholder="Title" value="{{wrassequery.title}}">
          </div>
        </div>
        <div class="form-group">
          <textarea class="form-control" placeholder="Leave a comment" id="description" name="description" rows="5" value="">{{wrassequery.description}}</textarea>
        </div>
        <div class="form-group" style="text-align: right;">
          <button type="submit" id="buttonsubmit"  role="button"   class="btn btn-success">Submit</button>
        </div>
      </form>
    </div>
  </div>
</div>
<br>
</div>
<div class="col-md-12" style="text-align: center;">
  <br><small class="text-muted">
    <i class="fas fa-info-circle"></i>  Remember, contributions to this repository should follow our {{siteName}} Community Guidelines.
  </small>
</div>
</div>
<script type="text/javascript">
  var ids = 'issue_{{{id}}}'
  var posted = false
  function formpost(forms) {
       if (posted == false) { //check if the form has been submitted , and prevent double sending.
        posted = true
        $('#buttonsubmit').prop('disabled', true);
        $.ajax({
          url     : $(forms).attr('action'),
          type    : $(forms).attr('method'),
            //dataType: 'json',
            data    : $(forms).serialize(),
            success : function( data ) {
              //console.log('forms',data)
              window.location = data
            },
            error   : function( xhr, err ) {
             // console.log('this',err)
             alert('Error',err);     
           }
         });    
        return false;
      } else {
        alert('This form has been submitted. Please wait for the server to respond.')
      }
   } 

   
  </script>
  {{else}}
  {{>notloggedin}}
  {{/if}}
