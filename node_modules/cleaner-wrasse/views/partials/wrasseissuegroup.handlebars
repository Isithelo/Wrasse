


<!-- first  card--->

<div class="container">
    <div class="row">
        {{#each getallissues}}

<div class="col-xs-12 col-sm-4">
            <div class="card" style="display: block;
              margin-bottom: 20px;
              line-height: 1.42857143;
              background-color: #fff;
              border-radius: 2px;
              box-shadow: 0 2px 5px 0 rgba(0,0,0,0.16),0 2px 10px 0 rgba(0,0,0,0.12);
              transition: box-shadow .25s;">
              
              <img src="https://www.gravatar.com/avatar/kjusdbkjsjkfs" class="card-img-top" alt="..."  class="img-fluid"/>
             
               
                <br />

                <div class="card-content" style="padding:15px;
                     text-align:left;">

                    <h4 class="card-title" style="margin-top:0px;
                        font-weight: 700;
                        font-size: 1.65em; text-align:center;">
                      
                        <a href="#">
                            {{this.issueGroup}}
                        </a>
                    </h4>
                    <div class="" style="text-align: center;">
                        All issues related to issue ?
                    </div>
                      <hr>

                      <div class="">
                         {{#each getallissues}}
              <h5>
                    {{#if this.title}}
                    <a href="/issues/view/{{this.id}}">{{this.title}}</a>

                    {{else}}
                    No title
                    {{/if}}
                    <small> created  by
                      {{#if this.username}}
                      {{this.username}}
                      {{else}}
                      anonymous
                      {{/if}}
                    </small>
              </h5>           
                        {{/each}}
                       </div>
                </div>
               
                <div class="card-read-more" style=" border-top: 1px solid #D4D4D4;">
                    <a class="btn btn-link btn-block" style="text-decoration: none !important;
                        padding:10px;
                        font-weight:600;
                        text-transform: uppercase"  href="/issues/view">
                        Read More
                    </a>
                </div>
            </div>
        </div>


        {{/each}}
