Issues linked to <span class="badge badge-secondary">{{parentid}}</span><br>
<!-- Nav tabs --><br>
<ul class="nav nav-tabs" id="myTab" role="tablist">
  <li class="nav-item">
    <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Open Issues</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Closed Issues</a>
  </li>
</ul>
<!-- Tab panes -->
<div class="tab-content">
  <div class="tab-pane active" id="home" role="tabpanel" aria-labelledby="home-tab">
{{#if parentid}}
{{else}}
<br>
<span class="badge badge-secondary">All issues</span>
{{/if}}
{{#if getallissues}}
<table class="table table-bordered   table-hover" id="{{ids}}">
  <thead>
    <tr>
      <th></th>
      <th><i class="text-success fas fa-exclamation-circle"></i> {{openCount}} Open | <i
        class="text-muted far fa-check-circle"> </i> {{closedCount}} Closed</th>
      </tr>
    </thead>
    <tbody>
      {{#each getallissues}}
      <tr>
        <td style="text-align: center;">
          {{#ifEquals this.active 'open'}}
          <i class="text-success fas fa-exclamation-circle"></i>
          {{else}}
          <i class="far fa-check-circle"></i>
          {{/ifEquals}}
        </td>
        <td>
          <div class="row">
            <div class="col-md-1">{{>randompicsm}}</div>
            <div class="col-md-10"> <h5>
              {{#if this.title}}
              {{#if this.parentid}}
              <a href="/issues/view/{{this.parentid}}">{{this.title}}</a>
              {{else}}
              {{this.title}}
              {{/if}}
              <span class="badge badge-secondary">{{this.parentid}}</span>
              {{else}}
              No title
              {{/if}}</h5>
            
              <small>Opened {{this.created}} by
                {{#if this.username}}
                <a href="/users/{{this.username}}">{{this.username}}</a>
                {{else}}
                anonymous
                {{/if}}</small>
                <br><p></p>
                <p>{{description}}</p>
                
            
            </div>
            <div class="col-md-1">
<div class="dropdown">
  <a class="btn btn-outline-secondary btn-sm " href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
   <i class="fas fa-ellipsis-h"></i>
  </a>
  <div class="dropdown-menu  dropdown-menu-right dropdown-menu-lg-left" aria-labelledby="dropdownMenuLink">
    <a class="dropdown-item" href="#">Edit</a>
    <a class="dropdown-item" href="#">Mark as closed</a>
    <a class="dropdown-item text-danger" href="#">Delete</a>
  </div>
</div>
            </div>
          </div>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  </div><br><br>
  <div class="tab-pane" id="profile" role="tabpanel" aria-labelledby="profile-tab">  <div class="alert alert-warning" role="alert">
    <strong>Heads up!</strong> This list of issues is empty.
  </div><br><br>
</div>
 
</div>
  <script type="text/javascript">
    var tableid = '{{ids}}'
    $(document).ready(function () {
      var table = $('#'+tableid).DataTable({
        'destroy': true,
        "pagingType": "numbers",
        "dom": 'Bfrtip', "autoWidth": true,
        "buttons": []
      });
    })
  </script>
  {{else}}
  <br><br>
  <div class="alert alert-warning" role="alert">
    <strong>Heads up!</strong> This list of issues is empty.
  </div>
<br><br>
  {{/if}}
