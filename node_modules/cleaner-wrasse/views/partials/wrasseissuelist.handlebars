<table class="table table-bordered   table-hover" id="tableActive">
  <thead>
    <tr>
      <th></th>
      <th><i class="text-success fas fa-exclamation-circle"></i> {{openCount}} Open | <i
          class="text-muted far fa-check-circle"> </i> {{closedCount}} Closed</th>
    </tr>
  </thead>
  <tbody>
    {{#each getallissues}}

    <tr>
      <td style="text-align: center;">
        {{#ifEquals this.active 'open'}}
        <i class="text-success fas fa-exclamation-circle"></i>
        {{else}}
        <i class="far fa-check-circle"></i>
        {{/ifEquals}}
      </td>
      <td>
        <h5>
          {{#if this.title}}
          <a href="/issues/view/{{this.id}}">{{this.title}}</a>

          {{else}}
          No title
          {{/if}}
          <small>Opened {{this.created}} by
            {{#if this.username}}
            {{this.username}}
            {{else}}
            anonymous
            {{/if}}
          </small>
        </h5>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
<script type="text/javascript">
  $(document).ready(function () {
    var table = $('#tableActive').DataTable({
      'destroy': true,
      "pagingType": "numbers",
      "dom": 'Bfrtip', "autoWidth": true,
      "buttons": []
    });

  })
</script>
<a href="/issues/group/" target="_blank" class="btn btn-success">Group issue</a>

